#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <Windows.h>

void atualizarMatrizX(int linha, int coluna, char matriz[][5]){
    matriz[linha][coluna] = 'X';
}
void atualizarMatrizO(char **matriz){
    int random;
    srand(time(NULL));
    random = rand();
}
int main(){
    printf("Jogo da velha!\n\n");
    char matriz[5][5] = {
        {' ', -77, ' ', -77, ' '}, 
        {-60, -59, -60, -59, -60}, 
        {' ', -77, ' ', -77, ' '}, 
        {-60, -59, -60, -59, -60}, 
        {' ', -77, ' ', -77, ' '}  
    };

    for (int i=0;i<5;i++){
        for(int j=0;j<5;j++){
            printf("%c", matriz[i][j]);
        }
        printf("\n");
    }
    atualizarMatrizX(0,0,matriz);

    system("cls");
    for (int i=0;i<5;i++){
        for(int j=0;j<5;j++){
            printf("%c", matriz[i][j]);
        }
        printf("\n");
    }
    return 0;
}
// X | O | X
// --+---+---
// X | O | X
// ----------
// X | O | X

// ┼ -59
// ─ -60
// │ -77
